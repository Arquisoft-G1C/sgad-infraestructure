# SGAD Infrastructure - Environment Variables
# IMPORTANTE: Cambia TODAS las contraseñas antes de usar en producción

# ====================
# PostgreSQL Configuration
# ====================
POSTGRES_DB=sgad_db
POSTGRES_USER=admin123
POSTGRES_PASSWORD=admin123
DATABASE_URL=postgresql://admin123:admin123@localhost:5432/sgad_db

# ====================
# MongoDB Configuration
# ====================
MONGO_DB=sgad_nosql
MONGO_USER=admin123
MONGO_PASSWORD=admin123
MONGO_URL=mongodb://admin123:admin123@localhost:27017/sgad_nosql?authSource=admin

# ====================
# Redis Configuration
# ====================
REDIS_PASSWORD=admin123
REDIS_URL=redis://:admin123@localhost:6379/0

# ====================
# Application Settings
# ====================
NODE_ENV=development
APP_PORT=3000
JWT_SECRET=ChangeThisJWTSecret_MustBeLongAndRandom123!
API_VERSION=v1

# ====================
# File Storage
# ====================
FILE_STORAGE_PATH=./file_storage
MAX_FILE_SIZE=10485760

# ====================
# Notification Settings
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@sgad.com
