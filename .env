# ============================================
# SGAD - Sistema de Gestion de Arbitros Deportivos
# Environment Configuration File
# ============================================

# ============================================
# GENERAL SETTINGS
# ============================================
NODE_ENV=development
ENVIRONMENT=development
SPRING_PROFILE=development
LOG_LEVEL=debug

# ============================================
# POSTGRESQL DATABASES
# ============================================
# Users Database (Auth Service)
USERS_DB=users_db
USERS_DB_USER=administrador
USERS_DB_PASSWORD=admin123

# Referee Database (Referee & Availability Services)
REFEREE_DB=referee_db
REFEREE_DB_USER=administrador
REFEREE_DB_PASSWORD=admin123

# Match Database (Match Management Service)
MATCH_DB=match_db
MATCH_DB_USER=administrador
MATCH_DB_PASSWORD=admin123

# ============================================
# MONGODB
# ============================================
MONGO_DB=certificados_db
MONGO_USER=administrador
MONGO_PASSWORD=admin123

# ============================================
# REDIS CACHE
# ============================================
REDIS_PASSWORD=admin123

# ============================================
# RABBITMQ MESSAGE BROKER
# ============================================
RABBITMQ_USER=administrador
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=sgad_vhost

# ============================================
# JWT AUTHENTICATION
# ============================================
# !!CAMBIAR EN PRODUCCION - Generar con: openssl rand -base64 64
JWT_SECRET=dev-secret-key-change-in-production-min-256-bits-required-for-security
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# ============================================
# SERVICE PORTS
# ============================================

# Backend Services
AUTH_SERVICE_PORT=3001
REFEREE_SERVICE_PORT=3004
AVAILABILITY_SERVICE_PORT=8000
MATCH_SERVICE_PORT=8001

# API Gateway
API_GATEWAY_PORT=8080

# Frontend
FRONTEND_PORT=3000
FRONT_MOBILE_PORT=8090

# Security
REVERSE_PROXY_PORT=80

# ============================================
# FRONTEND URLs (Para el navegador)
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8080

# ============================================
# SECURITY SETTINGS
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8090,http://localhost:8080

# ============================================
# PRODUCTION OVERRIDES
# ============================================
# Descomentar y configurar para produccion:
# NODE_ENV=production
# ENVIRONMENT=production
# SPRING_PROFILE=production
# LOG_LEVEL=info
# 
# USERS_DB_PASSWORD=your_secure_password_here
# REFEREE_DB_PASSWORD=your_secure_password_here
# MATCH_DB_PASSWORD=your_secure_password_here
# MONGO_PASSWORD=your_secure_password_here
# REDIS_PASSWORD=your_secure_password_here
# RABBITMQ_PASSWORD=your_secure_password_here
# JWT_SECRET=your_generated_secret_here
#
# NEXT_PUBLIC_API_URL=https://api.tudominio.com
# NEXT_PUBLIC_WS_URL=wss://api.tudominio.com
# CORS_ORIGINS=https://tudominio.com,https://www.tudominio.com